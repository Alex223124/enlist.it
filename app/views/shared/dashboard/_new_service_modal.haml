#new-service.modal.fade{ role: 'dialog', tabindex: '-1', 'aria-labelledby' => 'myModalLabel' }
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %button.close{ 'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button' }
          %span{ 'aria-hidden' => 'true' } Ã—
        %h4.modal-title Add New Service
      .modal-body
        = form_for @service, html: { role: 'form' } do |f|
          .fieldset
            .form-group
              = f.label :name
              = f.text_field :name, placeholder: 'Service Name', class: 'form-control'
            .row
              .col-lg-6
                .form-group
                  = f.label :notification_date
                  #datetimepicker.input-group.date
                    = f.text_field :notification_date, class: 'form-control'
                    %span.input-group-addon
                      %span.ti-calendar
              .col-lg-6
                .form-group
                  = f.label :frequency
                  = f.select :frequency, Service::FREQUENCY.map{ |x| [x.capitalize, x] }, { include_blank: 'Select frequency' }, { class: 'form-control', id: 'input-select' }
            .form-group
              = f.label :mobile_number, 'Service Contact No.'
              = f.text_field :mobile_number, placeholder: '09X-XXX-XXXX', class: 'form-control'
            .form-group
              = f.label :description
              = f.text_area :description, placeholder: 'Short Description', class: 'form-control'
            .form-group.clearfix
              .pull-right
                %button{ 'data-dismiss' => 'modal', type: 'button', class: 'btn btn-default' } Cancel
                = f.submit 'Save', class: 'btn btn-primary'

